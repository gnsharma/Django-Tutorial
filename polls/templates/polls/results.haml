{% extends 'polls/home.haml' %}
{% block content %}
%h1 {{ question.question_text }}
%ul
  {% for choice in question.choice_set.all %}
  %li {{ choice.choice_text }} -- {{ choice.votes }} vote{{ choice.votes|pluralize }}
  {% endfor %}
%a{:href => "{% url 'polls:detail' question.id %}"} Vote again?
{% endblock %}
